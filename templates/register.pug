extends layout.pug
block append head
  link(rel="stylesheet", href="/static/css/register.css")

block content
  div.form-wrapper
    form.form(action="/register" method="post" enctype="multipart/form-data")
      //- div
      //-   p 请上传头像
      //-   input(type="file" name="avatar" )
      div.item
        p 用户名
        input(type="text" name="username" required
        placeholder="请输入用户名")
      div.item
        p 密码
        input(type="password" name="password" required
         placeholder="请输入密码")
      div.item
        p 请确认密码
        input(type="password" required placeholder="请确认密码" name="confirm")
      div.item
        p 你是机器人么?
        div
          img(src="/captcha")
      div.item
        p 验证码
        input(type="text" name="captcha" placeholder="请输入验证码")
      div.register-button
        button 注册
block logic
  script(src="/static/js/register.js")